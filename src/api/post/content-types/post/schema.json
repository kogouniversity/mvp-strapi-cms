{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "content": {
      "type": "text",
      "required": true,
      "minLength": 1
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "post"
    },
    "group": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::group.group",
      "inversedBy": "posts"
    },
    "image_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::image-post.image-post",
      "mappedBy": "post"
    },
    "likes": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "commentCount": {
      "type": "integer",
      "default": 0
    }
  }
}
